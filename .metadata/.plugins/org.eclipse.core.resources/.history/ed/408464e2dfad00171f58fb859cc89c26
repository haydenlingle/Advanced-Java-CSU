public class Lab12 implements RecitationInterface{
	
	PictureLibrary picLib;
	int width = 0;
	int height = 0;
	
	int[][] data;
	
	

	@Override
	public void readImage(String inFile) {
		picLib = new PictureLibrary();
		
		try {
			picLib.readPGM("cam.pgm");
			width = picLib.getWidth();
			height = picLib.getHeight();
			data = picLib.getData();
			
		}catch (Exception e){
			System.out.println(e.getMessage());
		}
		// TODO Auto-generated method stub
		
	}

	@Override
	public void writeImage(String outFile) {
		try {
			picLib.setData(data);
			picLib.writePGM("new.pgm");
		}catch (Exception e){
			System.out.println(e.getMessage());
		}		
	}

	@Override
	public int[][] imageData() {
		// TODO Auto-generated method stub
		return data;
	}

	@Override
	public void negateImage() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void increaseContrast() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void decreaseContrast() {
		// TODO Auto-generated method stub
		
	}
	
}
